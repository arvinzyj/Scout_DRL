    <xacro:include filename="$(find realsense_ros_gazebo)/xacro/depthcam.xacro" />

    <xacro:realsense_d435 sensor_name="camera" parent_link="base_link" rate="30.0">
        <origin rpy="0 0 -3.1415926" xyz="-0.15005 0 0.140" />
    </xacro:realsense_d435>

    <!-- Add ray senser -->
    <xacro:add_sensor sensor_name="ray" type="ray" x_offset="-0.150" y_offset="0.0"
        z_offset="0.100"
        r="0.0" p="0.0" y="-3.1415926">
        <sensor_config>
            <update_rate>8</update_rate>
            <visualize>true</visualize>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-2.09439504</min_angle>
                        <max_angle>2.09439504</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.05</min>
                    <max>8.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <noise>
                <type>gaussian</type>
                <mean>0.0</mean>
                <stddev>0.1</stddev>
            </noise>
        </sensor_config>

        <sensor_plugin_config>
            <plugin name="sensor_ray_controller" filename="libgazebo_ros_laser.so">
                <topicName>/scan</topicName>
                <frameName>sensor_ray</frameName>
            </plugin>
        </sensor_plugin_config>
    </xacro:add_sensor>


